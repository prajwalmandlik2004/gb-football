<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transaction History</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="css/transaction.css">
</head>

<body>
    <div class="container">
        <div class="row mt-4 text-center">
            <div class="col-md-12">
                <div class="user-info">
                    <h5>{{user.firstname}} {{user.lastname}} - {{user.userid}}</h5>
                </div>
                <p>See Your Income Below</p>
                <div class="income-boxes">
                    <div class="income-box trading-income">
                        Trading Income: {{totalBetsProfit}}
                    </div>
                    <div class="income-box referral-income">
                        Referral Income: {{totalReferralIncome}}
                    </div>
                    <div class="income-box team-salary-income">
                        Team Salary Income: {{totalTeamIncome}}
                    </div>
                    <div class="income-box level-income">
                        Level Income: {{totalLevelIncome}}
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-12">
                <h4 class="team-history-header">Team History</h4>
                <h4 class="team-size">Your Team: {{totalTeam}} People</h4>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Serial No</th>
                                <th>Name</th>
                                <th>Contact</th>
                                <th>Balance</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each referredUsers}}
                            <tr>
                                <td>{{@index}}</td>
                                <td>{{this.firstname}} {{this.lastname}}</td>
                                <td>{{this.phone}}</td>
                                <td>{{this.totalBalance}}</td>
                                <td>
                                    <p
                                        class="status {{#if (eq this.status 'Active')}}status-active{{else}}status-not-active{{/if}}">
                                        {{this.status}}
                                    </p>
                                </td>
                                <td>
                                    <form action="/transaction/level" method="GET" style="display:inline;">
                                        <input type="hidden" name="userId" value="{{this.userid}}">
                                        <input type="hidden" name="level" value="2">
                                        <button type="submit" class="btn btn-primary mt-2">Level 2</button>
                                    </form>
                                    <form action="/transaction/level" method="GET" style="display:inline;">
                                        <input type="hidden" name="userId" value="{{this.userid}}">
                                        <input type="hidden" name="level" value="3">
                                        <button type="submit" class="btn btn-secondary mt-2">Level 3</button>
                                    </form>
                                </td>
                            </tr>
                            {{/each}}
                            {{#unless referredUsers.length}}
                            <tr>
                                <td colspan="6">No referred users found</td>
                            </tr>
                            {{/unless}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="js/app.js"></script>
    <script src="js/auth.js"></script>
</body>

</html>


